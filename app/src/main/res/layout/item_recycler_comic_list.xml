<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_comic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_cardview"
    app:cardCornerRadius="@dimen/round_corner_cardview"
    app:cardElevation="@dimen/elevation_cardview">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/comic_thumbnail"
            android:contentDescription="@string/comic_image"
            android:layout_width="@dimen/thumbnail_width"
            android:layout_height="@dimen/thumbnail_height"
            android:layout_margin="@dimen/normal_margin" />

        <TextView
            android:id="@+id/comic_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/comic_thumbnail"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_toRightOf="@+id/comic_thumbnail"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_title_big"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comic_authors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comic_title"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/comic_thumbnail"
            android:layout_toRightOf="@+id/comic_thumbnail"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/page_count"
            android:layout_width="@dimen/width_section"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/comic_thumbnail"
            android:layout_alignEnd="@+id/comic_title"
            android:layout_alignRight="@+id/comic_title"
            android:gravity="end"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.v7.widget.CardView>